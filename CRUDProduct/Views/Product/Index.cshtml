@model IEnumerable<Product>

<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
</head>
<body>
    <h1>Product List</h1>

    <table border="1">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.product_id</td>
                <td>@product.product_name</td>
                <td>@product.product_price</td>
                <td>@product.product_stok</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.product_id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.product_id })">Delete</a>
                </td>
            </tr>
        }
    </table>

    <h2>Add New Product</h2>
    <form method="post" action="@Url.Action("Create", "Product")">
        <label>Product Name:</label>
        <input type="text" name="product_name" required /><br />

        <label>Price:</label>
        <input type="number" name="product_price" required /><br />

        <label>Stok:</label>
        <input type="number" name="product_stok" required /><br />

        <button type="submit">Add Product</button>
    </form>
</body>
</html>
