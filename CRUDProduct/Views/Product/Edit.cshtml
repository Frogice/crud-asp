@model Product

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="product_id" />
    <label>Product Name:</label>
    <input type="text" asp-for="product_name" required /><br />

    <label>Price:</label>
    <input type="number" asp-for="product_price" step="0.01" required /><br />

    <label>Stock:</label>
    <input type="number" asp-for="product_stok" required /><br />

    <button type="submit">Save</button>
</form>


